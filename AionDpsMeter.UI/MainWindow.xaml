<Window x:Class="AionDpsMeter.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:AionDpsMeter.UI.ViewModels"
        mc:Ignorable="d"
        Title="AION2 DPS Meter" 
        Height="220" 
        Width="320"
        MinHeight="80"
        MinWidth="200"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="CanResizeWithGrip"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">


    <Border Background="{StaticResource PrimaryBackgroundBrush}" 
            BorderBrush="{StaticResource AccentBrush}" 
            BorderThickness="1" 
            CornerRadius="4"
            Opacity="0.92">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Compact Header -->
            <Border Grid.Row="0" 
                    Background="{StaticResource SecondaryBackgroundBrush}" 
                    CornerRadius="3,3,0,0"
                    Padding="6,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Combat Duration -->
                    <Border Grid.Column="0" 
                            Background="{StaticResource TertiaryBackgroundBrush}"
                            CornerRadius="3"
                            Padding="6,2"
                            VerticalAlignment="Center">
                        <TextBlock Text="{Binding CombatDuration}" 
                                   FontSize="11"
                                   FontFamily="Consolas"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryTextBrush}"/>
                    </Border>

                    <!-- Reset Button -->
                    <Button Grid.Column="2" 
                            Content="↺"
                            Command="{Binding ResetDataCommand}"
                            Width="22" 
                            Height="22"
                            FontSize="14"
                            Margin="4,0"
                            ToolTip="Reset"
                            Style="{StaticResource ModernButtonStyle}"
                            Background="{StaticResource TertiaryBackgroundBrush}"
                            Padding="0"/>

                    <!-- Minimize Button -->
                    <Button Grid.Column="3" 
                            Content="━"
                            Width="22" 
                            Height="22"
                            FontSize="10"
                            Margin="2,0"
                            Click="MinimizeButton_Click"
                            Style="{StaticResource ModernButtonStyle}"
                            Background="{StaticResource TertiaryBackgroundBrush}"
                            Padding="0"/>

                    <!-- Close Button -->
                    <Button Grid.Column="4" 
                            Content="✕"
                            Width="22" 
                            Height="22"
                            FontSize="10"
                            Click="CloseButton_Click"
                            Style="{StaticResource ModernButtonStyle}"
                            Background="#C42B1C"
                            Padding="0"/>
                </Grid>
            </Border>

            <!-- Players List - Compact & Virtualized -->
            <ListBox Grid.Row="1" 
                     ItemsSource="{Binding Players}"
                     Background="Transparent"
                     BorderThickness="0"
                     VirtualizingPanel.IsVirtualizing="True"
                     VirtualizingPanel.VirtualizationMode="Recycling"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     Padding="4,2,4,4">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <ContentPresenter/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Background="Transparent"
                                Margin="0,1"
                                Padding="2"
                                Cursor="Hand"
                                MouseLeftButtonDown="PlayerItem_Click"
                                ToolTip="{Binding PlayerName}">
                            <Border.Tag>
                                <Binding/>
                            </Border.Tag>

                            <Grid Height="26">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="26"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Class Icon -->
                                <Border Grid.Column="0" 
                                        Width="22" 
                                        Height="22" 
                                        CornerRadius="2"
                                        Background="{StaticResource TertiaryBackgroundBrush}"
                                        VerticalAlignment="Center">
                                    <Image Source="{Binding ClassIcon, Converter={StaticResource SafeImageSourceConverter}}" 
                                           Stretch="Uniform"
                                           RenderOptions.BitmapScalingMode="LowQuality"/>
                                </Border>

                                <!-- Damage Bar with Player Name and Total Damage -->
                                <Grid Grid.Column="1" Margin="4,2,4,2" VerticalAlignment="Center">
                                    <Border Background="{StaticResource TertiaryBackgroundBrush}" 
                                            CornerRadius="2"
                                            Height="20"/>
                                    <Border Background="{StaticResource DamageBarBrush}"
                                            CornerRadius="2"
                                            Height="20"
                                            HorizontalAlignment="Left">
                                        <Border.Width>
                                            <MultiBinding Converter="{StaticResource PercentageToWidthConverter}">
                                                <Binding Path="DamagePercentage"/>
                                                <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType=Grid}"/>
                                            </MultiBinding>
                                        </Border.Width>
                                    </Border>
                                    
                                    <!-- Player Name on left, Total Damage in center -->
                                    <Grid>
                                        <TextBlock Text="{Binding PlayerName}"
                                                   FontSize="10"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource PrimaryTextBrush}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Left"
                                                   Margin="6,0,0,0"
                                                   TextTrimming="CharacterEllipsis"/>
                                        
                                        <TextBlock Text="{Binding TotalDamageFormatted}"
                                                   FontSize="10"
                                                   FontWeight="Bold"
                                                   Foreground="{StaticResource PrimaryTextBrush}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                    </Grid>
                                </Grid>

                                <!-- DPS -->
                                <Border Grid.Column="2" 
                                        Background="{StaticResource TertiaryBackgroundBrush}"
                                        CornerRadius="2"
                                        Padding="4,2"
                                        Margin="0,2"
                                        VerticalAlignment="Center">
                                    <TextBlock FontSize="10"
                                               FontWeight="Bold"
                                               Foreground="#7FFF00"
                                               VerticalAlignment="Center">
                                        <Run Text="{Binding DpsFormatted, Mode=OneWay}"/>
                                        <Run Text="/s" FontSize="8" Foreground="{StaticResource SecondaryTextBrush}"/>
                                    </TextBlock>
                                </Border>

                                <!-- Percentage -->
                                <TextBlock Grid.Column="3"
                                           Text="{Binding DamagePercentage, StringFormat={}{0:F1}%}"
                                           FontSize="10"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource SecondaryTextBrush}"
                                           VerticalAlignment="Center"
                                           Margin="4,0,2,0"
                                           Width="36"
                                           TextAlignment="Right"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Border>
</Window>