<Application x:Class="AionDpsMeter.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:AionDpsMeter.UI.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.DeepPurple.xaml" />
                
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <converters:PercentageToWidthConverter x:Key="PercentageToWidthConverter"/>
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:SafeImageSourceConverter x:Key="SafeImageSourceConverter"/>

            <!-- Colors -->
            <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="#1E1E1E"/>
            <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#2D2D30"/>
            <SolidColorBrush x:Key="TertiaryBackgroundBrush" Color="#3E3E42"/>
            <SolidColorBrush x:Key="PrimaryTextBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="SecondaryTextBrush" Color="#CCCCCC"/>
            <SolidColorBrush x:Key="AccentBrush" Color="#007ACC"/>
            <SolidColorBrush x:Key="DamageBarBrush" Color="#FF6B35"/>
            <SolidColorBrush x:Key="CriticalColorBrush" Color="#FFD700"/>

            <!-- Default Button Style -->
            <Style x:Key="ModernButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
                <Setter Property="Padding" Value="12,6"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="4"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.8"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Opacity" Value="0.6"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>