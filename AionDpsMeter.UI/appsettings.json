{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.Hosting.Lifetime": "Warning",
        "Microsoft.Extensions.Hosting": "Warning"
      }
    },

    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "OutputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{AssemblyVersion}] [{Level:u3}] {SourceContext} {SessionId}: {Message}{NewLine}{Exception}"
        }

      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 20,
          "OutputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{AssemblyVersion}] [{Level:u3}] {SourceContext} {SessionId}: {Message}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithAssemblyVersion" ]

  }
}
