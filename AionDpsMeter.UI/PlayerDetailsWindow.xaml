<Window x:Class="AionDpsMeter.UI.PlayerDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Player Details" 
        Height="600" 
        Width="700"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="CanResizeWithGrip"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <!-- Optimized ScrollBar Style -->
        <Style x:Key="SlimScrollBarStyle" TargetType="ScrollBar">
            <Setter Property="Width" Value="8"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb Background="{StaticResource TertiaryBackgroundBrush}" 
                                           BorderThickness="0">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="{StaticResource AccentBrush}" 
                                                        CornerRadius="4" 
                                                        Opacity="0.6"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Virtualized ListBox Style -->
        <Style x:Key="VirtualizedListStyle" TargetType="ListBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VirtualizingPanel.IsVirtualizing" Value="True"/>
            <Setter Property="VirtualizingPanel.VirtualizationMode" Value="Recycling"/>
            <Setter Property="VirtualizingPanel.ScrollUnit" Value="Pixel"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="True"/>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <ContentPresenter/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource PrimaryBackgroundBrush}" 
            BorderBrush="{StaticResource AccentBrush}" 
            BorderThickness="2" 
            CornerRadius="8"
            Opacity="0.95">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{StaticResource SecondaryBackgroundBrush}" 
                    CornerRadius="6,6,0,0"
                    Padding="12,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="📊" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        
                        <!-- Class Icon -->
                        <Border Width="32" 
                                Height="32" 
                                CornerRadius="4"
                                Margin="0,0,10,0"
                                Background="{StaticResource TertiaryBackgroundBrush}"
                                Visibility="{Binding HasClassIcon, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Image Source="{Binding ClassIconDisplay, Converter={StaticResource SafeImageSourceConverter}}" 
                                   Stretch="Uniform"
                                   RenderOptions.BitmapScalingMode="LowQuality"/>
                        </Border>
                        
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="{Binding PlayerNameDisplay}" 
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource PrimaryTextBrush}"/>
                            <TextBlock Text="{Binding ClassNameDisplay}" 
                                       FontSize="11"
                                       Foreground="{StaticResource SecondaryTextBrush}"
                                       Margin="0,-2,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <Button Grid.Column="1" 
                            Content="✕"
                            Width="30" 
                            Height="30"
                            FontSize="16"
                            Click="CloseButton_Click"
                            Style="{StaticResource ModernButtonStyle}"
                            Background="#C42B1C"/>
                </Grid>
            </Border>

            <!-- Player Summary Stats -->
            <Border Grid.Row="1" 
                    Background="{StaticResource TertiaryBackgroundBrush}"
                    Padding="12,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Row 1: Main stats -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="8,4">
                            <TextBlock Text="Total Damage" FontSize="11" Foreground="{StaticResource SecondaryTextBrush}" VerticalAlignment="Center" Width="80"/>
                            <TextBlock Text="{Binding TotalDamageDisplay}" FontSize="13" FontWeight="Bold" Foreground="{StaticResource PrimaryTextBrush}" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="8,4">
                            <TextBlock Text="Contribution" FontSize="11" Foreground="{StaticResource SecondaryTextBrush}" VerticalAlignment="Center" Width="80"/>
                            <TextBlock Text="{Binding DamageContributionDisplay}" FontSize="13" FontWeight="Bold" Foreground="{StaticResource PrimaryTextBrush}" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="8,4">
                            <TextBlock Text="Crit Rate" FontSize="11" Foreground="{StaticResource SecondaryTextBrush}" VerticalAlignment="Center" Width="80"/>
                            <TextBlock Text="{Binding CriticalRateDisplay}" FontSize="13" FontWeight="Bold" Foreground="{StaticResource CriticalColorBrush}" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Left" Margin="8,4">
                            <TextBlock Text="Perfect Rate" FontSize="11" Foreground="{StaticResource SecondaryTextBrush}" VerticalAlignment="Center" Width="80"/>
                            <TextBlock Text="{Binding PerfectRateDisplay}" FontSize="13" FontWeight="Bold" Foreground="{StaticResource PrimaryTextBrush}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <!-- Row 2: Additional stats -->
                    <Grid Grid.Row="1" Margin="0,4,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="8,4">
                            <TextBlock Text="x2 Rate" FontSize="11" Foreground="{StaticResource SecondaryTextBrush}" VerticalAlignment="Center" Width="80"/>
                            <TextBlock Text="{Binding DoubleDamageRateDisplay}" FontSize="13" FontWeight="Bold" Foreground="#66FF66" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="8,4">
                            <TextBlock Text="Back Attack" FontSize="11" Foreground="{StaticResource SecondaryTextBrush}" VerticalAlignment="Center" Width="80"/>
                            <TextBlock Text="{Binding BackAttackRateDisplay}" FontSize="13" FontWeight="Bold" Foreground="{StaticResource AccentBrush}" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="8,4">
                            <TextBlock Text="Parry Rate" FontSize="11" Foreground="{StaticResource SecondaryTextBrush}" VerticalAlignment="Center" Width="80"/>
                            <TextBlock Text="{Binding ParryRateDisplay}" FontSize="13" FontWeight="Bold" Foreground="#FF6666" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Left" Margin="8,4">
                            <TextBlock Text="Duration" FontSize="11" Foreground="{StaticResource SecondaryTextBrush}" VerticalAlignment="Center" Width="80"/>
                            <TextBlock Text="{Binding CombatDurationDisplay}" FontSize="13" FontWeight="Bold" Foreground="{StaticResource PrimaryTextBrush}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- Tab Control -->
            <TabControl Grid.Row="2"
                        SelectedIndex="{Binding SelectedTabIndex}"
                        Background="Transparent"
                        BorderThickness="0"
                        Margin="8">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border x:Name="Border" 
                                            Background="{StaticResource TertiaryBackgroundBrush}" 
                                            CornerRadius="4,4,0,0"
                                            Padding="16,8"
                                            Margin="2,0">
                                        <ContentPresenter x:Name="ContentSite"
                                                          ContentSource="Header"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="{StaticResource AccentBrush}"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Opacity" Value="0.8"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                    </Style>
                </TabControl.Resources>

                <!-- Skills Tab -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚔️ Skills"/>
                            <TextBlock Text=" (" Foreground="{StaticResource SecondaryTextBrush}" FontSize="10" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding SkillCount}" FontSize="10" VerticalAlignment="Center"/>
                            <TextBlock Text=")" Foreground="{StaticResource SecondaryTextBrush}" FontSize="10" VerticalAlignment="Center"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Border Background="{StaticResource SecondaryBackgroundBrush}" 
                            CornerRadius="0,4,4,4"
                            Padding="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Table Header -->
                            <Border Grid.Row="0" 
                                    Background="{StaticResource TertiaryBackgroundBrush}"
                                    CornerRadius="4"
                                    Padding="10,8"
                                    Margin="0,0,0,4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="32"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="0.6*"/>
                                        <ColumnDefinition Width="0.5*"/>
                                        <ColumnDefinition Width="0.5*"/>
                                        <ColumnDefinition Width="0.5*"/>
                                        <ColumnDefinition Width="0.5*"/>
                                        <ColumnDefinition Width="0.5*"/>
                                        <ColumnDefinition Width="0.6*"/>
                                        <ColumnDefinition Width="1.2*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="" FontWeight="Bold" FontSize="11" Foreground="{StaticResource SecondaryTextBrush}"/>
                                    <TextBlock Grid.Column="1" Text="Skill" FontWeight="Bold" FontSize="11" Foreground="{StaticResource SecondaryTextBrush}"/>
                                    <TextBlock Grid.Column="2" Text="Hits" FontWeight="Bold" FontSize="11" Foreground="{StaticResource SecondaryTextBrush}" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="3" Text="Crit" FontWeight="Bold" FontSize="11" Foreground="{StaticResource SecondaryTextBrush}" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="4" Text="Parry" FontWeight="Bold" FontSize="11" Foreground="{StaticResource SecondaryTextBrush}" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="5" Text="Perf" FontWeight="Bold" FontSize="11" Foreground="{StaticResource SecondaryTextBrush}" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="6" Text="x2" FontWeight="Bold" FontSize="11" Foreground="{StaticResource SecondaryTextBrush}" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="7" Text="Back" FontWeight="Bold" FontSize="11" Foreground="{StaticResource SecondaryTextBrush}" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="8" Text="Avg" FontWeight="Bold" FontSize="11" Foreground="{StaticResource SecondaryTextBrush}" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="9" Text="Damage" FontWeight="Bold" FontSize="11" Foreground="{StaticResource SecondaryTextBrush}" HorizontalAlignment="Right" Margin="0,0,8,0"/>
                                </Grid>
                            </Border>

                            <!-- Skills List - Virtualized -->
                            <ListBox Grid.Row="1" 
                                     ItemsSource="{Binding Skills}"
                                     Style="{StaticResource VirtualizedListStyle}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource PrimaryBackgroundBrush}"
                                                CornerRadius="3"
                                                Padding="10,5"
                                                Margin="0,0,0,2">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="32"/>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="0.6*"/>
                                                    <ColumnDefinition Width="0.5*"/>
                                                    <ColumnDefinition Width="0.5*"/>
                                                    <ColumnDefinition Width="0.5*"/>
                                                    <ColumnDefinition Width="0.5*"/>
                                                    <ColumnDefinition Width="0.5*"/>
                                                    <ColumnDefinition Width="0.6*"/>
                                                    <ColumnDefinition Width="1.2*"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Skill Icon -->
                                                <Border Grid.Column="0"
                                                        Width="24"
                                                        Height="24"
                                                        CornerRadius="3"
                                                        Background="{StaticResource TertiaryBackgroundBrush}">
                                                    <Image Source="{Binding SkillIcon, Converter={StaticResource SafeImageSourceConverter}}" 
                                                           Stretch="Uniform"
                                                           RenderOptions.BitmapScalingMode="LowQuality"/>
                                                </Border>

                                                <!-- Skill Name -->
                                                <TextBlock Grid.Column="1" 
                                                           Text="{Binding SkillName}" 
                                                           FontWeight="SemiBold" 
                                                           FontSize="11" 
                                                           Foreground="{StaticResource PrimaryTextBrush}"
                                                           VerticalAlignment="Center"
                                                           TextTrimming="CharacterEllipsis"
                                                           Margin="4,0,0,0"/>

                                                <!-- Hit Count -->
                                                <TextBlock Grid.Column="2" 
                                                           Text="{Binding HitCountFormatted}" 
                                                           FontSize="10" 
                                                           VerticalAlignment="Center"
                                                           Foreground="{StaticResource PrimaryTextBrush}" 
                                                           HorizontalAlignment="Center"/>

                                                <!-- Critical Rate -->
                                                <TextBlock Grid.Column="3" 
                                                           Text="{Binding CriticalRateFormatted}" 
                                                           FontSize="10" 
                                                           VerticalAlignment="Center"
                                                           Foreground="{StaticResource CriticalColorBrush}" 
                                                           HorizontalAlignment="Center"/>

                                                <!-- Parry Rate -->
                                                <TextBlock Grid.Column="4" 
                                                           Text="{Binding ParryRateFormatted}" 
                                                           FontSize="10" 
                                                           VerticalAlignment="Center"
                                                           Foreground="#FF6666" 
                                                           HorizontalAlignment="Center"/>

                                                <!-- Perfect Rate -->
                                                <TextBlock Grid.Column="5" 
                                                           Text="{Binding PerfectRateFormatted}" 
                                                           FontSize="10" 
                                                           VerticalAlignment="Center"
                                                           Foreground="{StaticResource PrimaryTextBrush}" 
                                                           HorizontalAlignment="Center"/>

                                                <!-- Double Damage Rate -->
                                                <TextBlock Grid.Column="6" 
                                                           Text="{Binding DoubleDamageRateFormatted}" 
                                                           FontSize="10" 
                                                           VerticalAlignment="Center"
                                                           Foreground="#66FF66" 
                                                           HorizontalAlignment="Center"/>

                                                <!-- Back Attack Rate -->
                                                <TextBlock Grid.Column="7" 
                                                           Text="{Binding BackAttackRateFormatted}" 
                                                           FontSize="10" 
                                                           VerticalAlignment="Center"
                                                           Foreground="{StaticResource AccentBrush}" 
                                                           HorizontalAlignment="Center"/>

                                                <!-- Average Damage -->
                                                <TextBlock Grid.Column="8" 
                                                           Text="{Binding AverageDamageFormatted}" 
                                                           FontSize="10" 
                                                           VerticalAlignment="Center"
                                                           Foreground="{StaticResource PrimaryTextBrush}" 
                                                           HorizontalAlignment="Center"/>

                                                <!-- Damage -->
                                                <TextBlock Grid.Column="9" 
                                                           FontSize="10" 
                                                           VerticalAlignment="Center"
                                                           Foreground="{StaticResource DamageBarBrush}" 
                                                           HorizontalAlignment="Right"
                                                           Margin="0,0,4,0">
                                                    <Run Text="{Binding TotalDamageFormatted, Mode=OneWay}" FontWeight="Bold"/>
                                                    <Run Text=" (" Foreground="{StaticResource SecondaryTextBrush}"/><Run Text="{Binding DamagePercentageFormatted, Mode=OneWay}" Foreground="{StaticResource SecondaryTextBrush}"/><Run Text=")" Foreground="{StaticResource SecondaryTextBrush}"/>
                                                </TextBlock>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Border>
                </TabItem>

                <!-- Combat Log Tab -->
                <TabItem Header="📜 Combat Log">
                    <Border Background="{StaticResource SecondaryBackgroundBrush}" 
                            CornerRadius="0,4,4,4"
                            Padding="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Table Header -->
                            <Border Grid.Row="0" 
                                    Background="{StaticResource TertiaryBackgroundBrush}"
                                    CornerRadius="4"
                                    Padding="10,8"
                                    Margin="0,0,0,4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="28"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="Time" FontWeight="Bold" FontSize="11" Foreground="{StaticResource SecondaryTextBrush}"/>
                                    <TextBlock Grid.Column="1" Text="" FontWeight="Bold" FontSize="11" Foreground="{StaticResource SecondaryTextBrush}"/>
                                    <TextBlock Grid.Column="2" Text="Skill" FontWeight="Bold" FontSize="11" Foreground="{StaticResource SecondaryTextBrush}"/>
                                    <TextBlock Grid.Column="3" Text="Target" FontWeight="Bold" FontSize="11" Foreground="{StaticResource SecondaryTextBrush}"/>
                                    <TextBlock Grid.Column="4" Text="Damage" FontWeight="Bold" FontSize="11" Foreground="{StaticResource SecondaryTextBrush}" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="5" Text="Flags" FontWeight="Bold" FontSize="11" Foreground="{StaticResource SecondaryTextBrush}" HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>

                            <!-- Combat Log List - Virtualized -->
                            <ListBox Grid.Row="1" 
                                     ItemsSource="{Binding CombatLog}"
                                     Style="{StaticResource VirtualizedListStyle}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource PrimaryBackgroundBrush}"
                                                CornerRadius="2"
                                                Padding="10,3"
                                                Margin="0,0,0,1">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="70"/>
                                                    <ColumnDefinition Width="28"/>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="1.5*"/>
                                                    <ColumnDefinition Width="60"/>
                                                    <ColumnDefinition Width="100"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" 
                                                           Text="{Binding TimeFormatted}" 
                                                           FontSize="9" 
                                                           FontFamily="Consolas"
                                                           VerticalAlignment="Center"
                                                           Foreground="{StaticResource SecondaryTextBrush}"/>
                                                           
                                                <!-- Skill Icon -->
                                                <Border Grid.Column="1"
                                                        Width="20"
                                                        Height="20"
                                                        CornerRadius="2"
                                                        Background="{StaticResource TertiaryBackgroundBrush}">
                                                    <Image Source="{Binding SkillIcon, Converter={StaticResource SafeImageSourceConverter}}" 
                                                           Stretch="Uniform"
                                                           RenderOptions.BitmapScalingMode="LowQuality"/>
                                                </Border>

                                                <TextBlock Grid.Column="2" 
                                                           Text="{Binding SkillName}" 
                                                           FontSize="10" 
                                                           VerticalAlignment="Center"
                                                           Foreground="{StaticResource PrimaryTextBrush}"
                                                           TextTrimming="CharacterEllipsis"
                                                           Margin="4,0,0,0"/>
                                                           
                                                <TextBlock Grid.Column="3" 
                                                           Text="{Binding TargetName}" 
                                                           FontSize="10" 
                                                           VerticalAlignment="Center"
                                                           Foreground="{StaticResource SecondaryTextBrush}"
                                                           TextTrimming="CharacterEllipsis"/>
                                                           
                                                <TextBlock Grid.Column="4" 
                                                           Text="{Binding DamageFormatted}" 
                                                           FontSize="10" 
                                                           FontWeight="Bold"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Right">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="{StaticResource DamageBarBrush}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsCritical}" Value="True">
                                                                    <Setter Property="Foreground" Value="{StaticResource CriticalColorBrush}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                
                                                <TextBlock Grid.Column="5" 
                                                           Text="{Binding Flags}" 
                                                           FontSize="8" 
                                                           FontWeight="Bold"
                                                           VerticalAlignment="Center"
                                                           Foreground="{StaticResource CriticalColorBrush}"
                                                           HorizontalAlignment="Right"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Border>
                </TabItem>
            </TabControl>
        </Grid>
    </Border>
</Window>
